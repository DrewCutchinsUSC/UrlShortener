<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>UrlShortener</display-name>
  
  <servlet>
    <servlet-name>url</servlet-name>
    <servlet-class>csci310.urlshortener.api.UrlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>url</servlet-name>
    <url-pattern>/api/url</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>redirect</servlet-name>
    <servlet-class>csci310.urlshortener.api.RedirectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>redirect</servlet-name>
    <url-pattern>/link/*</url-pattern>
  </servlet-mapping>
</web-app>
